<div class="row">
    <div class="col-md-4">
        <form action="/send-sms" method="post" class="card card-body">
            <div class="form-group">
                <input type="text" name="message" class="form-control" placeholder="write your message" autofocus>
            </div>
            <div class="form-group">
                <input type="tel" name="phone" class="form-control" placeholder="+205123123" autocomplete="off">
            </div>
            <button class="btn btn-primary btn-block">
                Send
            </button>
        </form>
    </div>
    <div class="col-md-8">
        <div class="card card-body">
            <p class="card-text">Total Messages: <em>{{messages.length}}</em></p>
        </div>
        {{#if messages}}
            <ul class="list-group" style="height: 70vh; overflow-y: auto" id="messages">
                {{#each messages}}
                    <li class="list-group-item list-group-item-info list-group-item-action">
                        <p>{{Body}}</p>
                        <span>{{_id}}</span>
                        <span>{{hidenumber From}}</span>
                        <span>{{hidenumber To}}</span>
                        <span>{{timeago createdAt}}</span>
                    </li>
                {{/each}}
            </ul>
        {{else}}
            <p> No Messages yet</p>
        {{/if}}
    </div>
</div>
